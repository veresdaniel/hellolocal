# HelloLocal Frontend Environment Variables
# Copy this file to .env and fill in your values

# API URL
VITE_API_URL=http://localhost:3002

# Web Push Notifications (Optional)
# Should match the VAPID_PUBLIC_KEY from backend
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# Analytics (Optional - not yet implemented)
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
# VITE_PLAUSIBLE_DOMAIN=yourdomain.com

# Maximum distance in km to show distance information for markers (default: 10)
# VITE_MAX_DISTANCE_KM=10

# Cloudinary CDN (for image/video uploads in TipTap editor)
# Get these from https://cloudinary.com dashboard
# VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
# VITE_CLOUDINARY_API_KEY=your_api_key
# VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset_name

# Multi-site mode (default: true)
# Set to "false" to disable multi-site mode (single-site mode)
# VITE_HAS_MULTIPLE_SITES=true

