{
  "name": "hellolocal-api",
  "version": "1.0.1-beta",
  "description": "HelloLocal Backend API - Multi-tenant local tourism platform",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/main.js",
    "build": "tsc -p tsconfig.json",
    "start:dev": "nest start --watch",
    "baseline": "tsx scripts/baseline-migrations.ts",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:to-brand": "tsx scripts/migrate-to-brand-siteinstance.ts",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:setup:reset": "tsx scripts/setup-db-with-reset.ts",
    "db:reset": "prisma migrate reset --force",
    "db:reset:seed": "prisma migrate reset --force && prisma db seed",
    "db:seed": "prisma db seed",
    "db:activate-sites": "tsx scripts/activate-all-sites.ts",
    "db:ensure-site-keys": "tsx scripts/ensure-site-keys.ts",
    "db:ensure-default-site": "tsx scripts/ensure-default-site.ts",
    "db:ensure-site-instances": "tsx scripts/ensure-site-instances.ts",
    "db:fix-site-keys-and-instances": "tsx scripts/fix-site-keys-and-instances.ts",
    "db:debug-site": "tsx scripts/debug-site.ts",
    "db:fix-all-sites": "tsx scripts/fix-all-sites.ts",
    "db:fix-duplicate-slugs": "tsx scripts/fix-duplicate-slugs.ts",
    "db:fix-admin": "tsx scripts/fix-admin-user.ts",
    "generate": "prisma generate && bash scripts/copy-prisma-client.sh",
    "postinstall": "prisma generate && bash scripts/copy-prisma-client.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.27.0",
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.11",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/schedule": "^6.1.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "speakeasy": "^2.0.0",
    "web-push": "^3.6.7",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "@nestjs/throttler": "^6.1.1",
    "helmet": "^8.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/qrcode": "^1.5.6",
    "@types/web-push": "^3.6.4",
    "@types/helmet": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "eslint": "^9.39.1",
    "@eslint/js": "^9.39.1",
    "typescript-eslint": "^8.46.4",
    "globals": "^16.5.0",
    "prettier": "^3.4.2"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
