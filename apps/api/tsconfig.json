{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "lib": ["ES2022"],
      "declaration": false,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
      "paths": {
        "@prisma/client": ["./node_modules/@prisma/client"]
      }
    },
    "include": ["src/**/*.ts"]
  }